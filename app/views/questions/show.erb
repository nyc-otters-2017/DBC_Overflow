<div class="container">

  <small>[<%=@question.get_total_votes%> Votes]</small>
  <form action="/questions/<%=@question.id%>/upvote" method="post">
    <button class="waves-effect waves-teal btn-flat" type="submit" name="button"><i class="tiny material-icons">thumb_up</i></button>
    <input type="hidden" name="question_id" value="<%=@question.id%>">
  </form>

  <form action="/questions/<%=@question.id%>/downvote" method="post">
    <button class="waves-effect waves-teal btn-flat" type="submit" name="button"><i class="tiny material-icons">thumb_down</i></button>
    <input type="hidden" name="question_id" value="<%=@question.id%>">
  </form>

  <br>
  <label for="">Question:</label><h1><%= @question.title %></h1>
  <label for="">More details:</label>
  <br>
  <%= @question.body_question %>
  <br><br>
  <a href="/questions/<%=@question.id%>/comments/new">Add Comment</a>
  <ul>
    <small>Question comments:</small>
    <% @question.comments.each do |comment| %>
      <li><label for="">
         <%= comment.body_comment %> </label></li>
    <%end%>
  </ul>
</div>

<% if @question.answers.any? %>
<div class="container">
  <h1>All Answers</h1>
    <a href="/questions/<%= @question.id %>/answers/new">Post An Answer</a>
  <% @question.answers.each do |answer| %>
  <br>
  <br>
  [<%=answer.get_total_votes%> Votes]

  <form action="/answers/<%= answer.id %>/upvote" method="post">
    <button class="waves-effect waves-teal btn-flat" type="submit" name="button"><i class="tiny material-icons">thumb_up</i></button>
    <input type="hidden" name="answer_id" value="<%=answer.id%>">
  </form>

  <form action="/answers/<%= answer.id %>/downvote" method="post">
    <button class="waves-effect waves-teal btn-flat" type="submit" name="button"><i class="tiny material-icons">thumb_down</i></button>
    <input type="hidden" name="answer_id" value="<%=answer.id%>">
  </form>


  <label for="">Answer: </label>
  <br>
  <%= answer.body_answer %><br>
  <small>[<%= answer.get_total_votes %> Votes]</small>
  <br>

  <% end %>
</div>
<% end %>
