<div class="">
    <h1><%= current_user.username %>'s Profile</h1>
    <div class="questions_asked">
        <h4>Questions Asked</h4>
        <% current_user.questions.each do |question| %>
            <a href="/questions/<%=question.id%>">
                <%= question.title %>
                    <br>
                    <br> </a>
            <% end %>
    </div>

    <div class="Answers">
        <h4>Answer's Given</h4>
        <% current_user.answers.each do |answer| %>
            <a href="/questions/<%=answer.id%>">
                <%= answer.body_answer %>
                    <br>
                    <br> </a>
            <% end %>
    </div>
</div>
